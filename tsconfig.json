{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "strictNullChecks": true,
    "downlevelIteration": true,
    "allowJs": false,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@ts/*": ["src/ts/*"],
      "@hooks/*": ["src/hooks/*"],
    }
  },
  "include": ["src"]
}
